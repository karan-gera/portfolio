---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Portfolio - Home" description="Welcome to my terminal-inspired portfolio">
  <div class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <section class="mb-16">
      <div class="terminal-border rounded-lg p-8 terminal-glow">
        <h1 class="mb-4 font-mono text-4xl font-medium">
          <span class="text-tui-green">></span> Hello, World!
        </h1>
        <p class="mb-6 text-lg text-gray-300">
          Welcome to my portfolio. This is a terminal-inspired interface built with Astro, React, and Tailwind CSS.
        </p>
        <div class="font-mono text-sm text-gray-400">
          <div class="mb-2">
            <span class="text-tui-cyan">$</span> 
            <span class="text-gray-300">cat about.txt</span>
          </div>
          <div class="ml-4 border-l-2 border-tui-amber pl-4">
            <p>Full-stack developer passionate about creating beautiful and functional web experiences.</p>
            <p>Currently building with modern technologies and terminal aesthetics.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Status Section -->
    <section class="mb-16">
      <h2 class="mb-6 font-mono text-2xl">
        <span class="text-tui-cyan">></span> System Status
      </h2>
      <div class="grid gap-4 md:grid-cols-3">
        <div class="terminal-border rounded-lg p-6">
          <div class="mb-2 flex items-center space-x-2">
            <span class="h-2 w-2 bg-tui-green rounded-full"></span>
            <span class="font-mono text-sm text-tui-green">ONLINE</span>
          </div>
          <h3 class="font-mono text-lg">Projects</h3>
          <p class="text-sm text-gray-400">Multiple repositories active</p>
        </div>
        
        <div class="terminal-border rounded-lg p-6">
          <div class="mb-2 flex items-center space-x-2">
            <span class="h-2 w-2 bg-tui-amber rounded-full"></span>
            <span class="font-mono text-sm text-tui-amber">BUILDING</span>
          </div>
          <h3 class="font-mono text-lg">Skills</h3>
          <p class="text-sm text-gray-400">Continuously learning</p>
        </div>
        
        <div class="terminal-border rounded-lg p-6">
          <div class="mb-2 flex items-center space-x-2">
            <span class="h-2 w-2 bg-tui-cyan rounded-full"></span>
            <span class="font-mono text-sm text-tui-cyan">AVAILABLE</span>
          </div>
          <h3 class="font-mono text-lg">Contact</h3>
          <p class="text-sm text-gray-400">Ready for new opportunities</p>
        </div>
      </div>
    </section>

    <!-- Terminal Output Preview -->
    <section>
      <h2 class="mb-6 font-mono text-2xl">
        <span class="text-tui-amber">></span> Recent Activity
      </h2>
      <div class="terminal-border rounded-lg bg-tui-bg p-6 font-mono text-sm">
        <div class="mb-2 text-gray-500">Last login: {new Date().toLocaleDateString()} on portfolio</div>
        <div class="mb-2">
          <span class="text-tui-green">user@portfolio:~$</span> 
          <span class="text-gray-300">ls -la projects/</span>
        </div>
        <div class="ml-4 text-gray-400">
          <div>drwxr-xr-x  portfolio-site</div>
          <div>drwxr-xr-x  web-applications</div>
          <div>drwxr-xr-x  open-source</div>
        </div>
        <div class="mt-4">
          <span class="text-tui-green">user@portfolio:~$</span> 
          <span class="text-gray-300 animate-pulse">_</span>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>