---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Portfolio", 
  description = "A modern terminal-inspired portfolio"
} = Astro.props;

// Get current time for the TUI prompt
const now = new Date();
const timestamp = now.toLocaleTimeString('en-US', { 
  hour12: false,
  hour: '2-digit',
  minute: '2-digit',
  second: '2-digit'
});
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  
  <body>
    <!-- Sticky Header with TUI Prompt -->
    <header class="sticky top-0 z-50 border-b border-gray-700 bg-tui-panel/90 backdrop-blur-sm">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-12 items-center justify-between">
          <!-- TUI Prompt Section -->
          <div class="flex items-center space-x-3">
            <div class="flex items-center space-x-2 font-mono text-sm">
              <span class="text-tui-green">●</span>
              <span class="text-gray-400">user@portfolio</span>
              <span class="text-tui-amber">~</span>
              <span class="text-tui-cyan">$</span>
              <span class="text-gray-300">whoami</span>
            </div>
            <div class="hidden sm:flex items-center space-x-2 text-xs text-gray-500">
              <span class="w-1 h-1 bg-tui-green rounded-full animate-pulse"></span>
              <time>{timestamp}</time>
            </div>
          </div>
          
          <!-- CMD+K Hint Placeholder -->
          <div class="flex items-center space-x-2">
            <div class="hidden md:flex items-center space-x-1 rounded border border-gray-600 px-2 py-1 text-xs text-gray-400">
              <kbd class="font-mono">⌘</kbd>
              <span>+</span>
              <kbd class="font-mono">K</kbd>
              <span class="ml-1">Quick nav</span>
            </div>
            <div class="w-2 h-2 bg-tui-amber rounded-full opacity-60"></div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Optional Scripts -->
    <script>
      // Add a subtle cursor blink effect to the status indicator
      const statusDot = document.querySelector('header .bg-tui-amber');
      if (statusDot) {
        setInterval(() => {
          statusDot.style.opacity = statusDot.style.opacity === '0.3' ? '0.6' : '0.3';
        }, 1000);
      }
    </script>
  </body>
</html>


